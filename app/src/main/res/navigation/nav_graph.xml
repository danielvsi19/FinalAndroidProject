<?xml version="1.0" encoding="utf-8"?>
<!-- res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.couplesnight.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_signUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_login_to_preferences"
            app:destination="@id/preferencesFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.couplesnight.ui.auth.SignUpFragment"
        android:label="Sign Up">
        <action
            android:id="@+id/action_signUp_to_preferences"
            app:destination="@id/preferencesFragment" />
    </fragment>

    <fragment
        android:id="@+id/preferencesFragment"
        android:name="com.example.couplesnight.ui.preferences.PreferencesFragment"
        android:label="Preferences" />
</navigation>